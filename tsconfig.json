{
    "compilerOptions": {
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "lib": ["es2022"],
        "target": "es2022",
        "types": [
            "node"
        ],

        "allowJs": true,
        "checkJs": true,
        "noEmit": true,

        "strict": false,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true
    },
    "include": [
        "**/*.js"
    ],
    "exclude": [
        "coverage/**",
        "docs/**"
    ]
}
